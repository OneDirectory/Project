<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="projectPU">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:/mySQL</jta-data-source>
		<class>ie.dit.onedirectory.entities.CellHierarchy</class>
		<class>ie.dit.onedirectory.entities.EventCause</class>
		<class>ie.dit.onedirectory.entities.FailedCallData</class>
		<class>ie.dit.onedirectory.entities.FailureClass</class>
		<class>ie.dit.onedirectory.entities.MarketOperator</class>
		<class>ie.dit.onedirectory.entities.UserEquipment</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
		</properties>
	</persistence-unit>

</persistence>